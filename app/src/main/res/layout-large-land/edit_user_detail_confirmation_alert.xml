<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_outer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#de12161e"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50.0dip"
            android:layout_marginEnd="50.0dip"
            android:background="#de12161e">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25.0dip"
                            android:drawableStart="@drawable/alert_icon"
                            android:drawablePadding="7.0dip"
                            android:fontFamily="@string/font_family_medium"
                            android:text="Please Comfirm your Password of "
                            android:textColor="@color/black"
                            android:textSize="20.0sp" />

                        <ImageView
                            android:id="@+id/iv_div"
                            android:layout_width="fill_parent"
                            android:layout_height="2.0dip"
                            android:layout_below="@+id/tv_text"
                            android:layout_marginTop="15.0dip"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:id="@+id/rl_body"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_div"
                            android:layout_margin="20.0dip">

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please Comfirm your Password of  "
                                android:textSize="20.0sp"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_description"
                                android:background="@drawable/selector_verify_password_fields"
                                android:hint="@string/password"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="10.0dip" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_body">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3.0">

                                <Button
                                    android:id="@+id/btn_yes"
                                    android:layout_width="150.0dip"
                                    android:layout_height="40.0dip"
                                    android:layout_marginStart="40.0dip"
                                    android:layout_marginTop="15.0dip"
                                    android:layout_marginEnd="20.0dip"
                                    android:layout_marginBottom="20.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/back_btn_effect"
                                    android:focusable="true"
                                    android:tag="1"
                                    android:text="Submit"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp" />

                                <Button
                                    android:id="@+id/btn_no"
                                    android:layout_width="150.0dip"
                                    android:layout_height="40.0dip"
                                    android:layout_marginStart="20.0dip"
                                    android:layout_marginTop="15.0dip"
                                    android:layout_marginEnd="40.0dip"
                                    android:layout_marginBottom="20.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/logout_btn_effect"
                                    android:focusable="true"
                                    android:tag="2"
                                    android:text="@string/cancel"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>