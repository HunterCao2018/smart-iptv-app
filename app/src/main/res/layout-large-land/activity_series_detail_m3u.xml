<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:layoutDirection="locale">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="65.0dip"
            android:layout_centerInParent="true"
            android:fitsSystemWindows="true"
            android:minHeight="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="visible"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layoutDirection="locale">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="190.0dip"
                    android:layout_height="fill_parent"
                    android:focusable="false"
                    android:paddingStart="10.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:src="@drawable/full_white_logo" />

                <TextView
                    android:id="@+id/tv_account_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_bold"
                    android:gravity="center"
                    android:paddingStart="80.0dip"
                    android:text="@string/series_info"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="24.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_account_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layoutDirection="locale"
                android:visibility="gone" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale">

                    <LinearLayout
                        android:id="@+id/ll_movie_info_box"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100.0dip"
                        android:layout_marginEnd="100.0dip"
                        android:layoutDirection="locale"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layoutDirection="locale"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="60.0dip"
                                android:layoutDirection="locale">

                                <TextView
                                    android:id="@+id/tv_movie_name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="#54000000"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textAlignment="center"
                                    android:textColor="@color/series_heading"
                                    android:textDirection="locale"
                                    android:textSize="22.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="300.0dip"
                                android:layoutDirection="locale"
                                android:weightSum="3.0">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:baselineAligned="false"
                                    android:layoutDirection="locale"
                                    android:orientation="horizontal"
                                    android:weightSum="3.0">

                                    <LinearLayout
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.75"
                                        android:gravity="center_vertical"
                                        android:layoutDirection="locale"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10.0dip"
                                            android:layoutDirection="locale">

                                            <ImageView
                                                android:id="@+id/iv_movie_image"
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_marginTop="5.0dip"
                                                android:background="@drawable/noposter"
                                                android:scaleType="fitXY" />

                                            <ImageView
                                                android:id="@+id/iv_favourite"
                                                android:layout_width="40.0dip"
                                                android:layout_height="40.0dip"
                                                android:layout_alignParentEnd="true"
                                                android:layout_marginTop="10.0dip"
                                                android:layout_marginEnd="1.0dip"
                                                android:background="@drawable/selector_favourite_vod"
                                                android:src="@drawable/favourite_yellow" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_detail_left_side"
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.6"
                                        android:layoutDirection="locale"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="0.6"
                                            android:layoutDirection="locale"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:layoutDirection="locale"
                                                android:orientation="vertical"
                                                android:weightSum="5.0">

                                                <LinearLayout
                                                    android:id="@+id/ll_director_box"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_director"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:gravity="left"
                                                        android:paddingStart="30.0dip"
                                                        android:paddingTop="1.0dip"
                                                        android:text="@string/diected_by"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp"
                                                        android:textStyle="bold"
                                                        android:visibility="visible" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_released_box"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_release_date"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:gravity="left"
                                                        android:paddingStart="30.0dip"
                                                        android:paddingTop="1.0dip"
                                                        android:text="@string/release_date"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp"
                                                        android:textStyle="bold"
                                                        android:visibility="visible" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_duration_box"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale"
                                                    android:visibility="gone">

                                                    <TextView
                                                        android:id="@+id/tv_movie_duration"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:gravity="left"
                                                        android:paddingTop="1.0dip"
                                                        android:text="@string/duration"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textSize="18.0sp"
                                                        android:textStyle="bold"
                                                        android:visibility="visible" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_genre_box"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="0.9"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_movie_genere"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:gravity="left"
                                                        android:paddingStart="30.0dip"
                                                        android:paddingTop="1.0dip"
                                                        android:text="@string/genre1"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp"
                                                        android:textStyle="bold"
                                                        android:visibility="visible" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_cast_box"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="2.0"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_cast"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:gravity="left"
                                                        android:paddingStart="30.0dip"
                                                        android:paddingTop="1.0dip"
                                                        android:text="@string/plot"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp"
                                                        android:textStyle="bold"
                                                        android:visibility="visible" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_detail_ProgressBar"
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="2.0">

                                        <ProgressBar
                                            android:id="@+id/tv_detail_ProgressBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="30.0dip"
                                            android:layout_marginStart="20.0dip"
                                            android:layout_marginTop="63.0dip"
                                            android:layout_marginEnd="20.0dip"
                                            android:gravity="start"
                                            android:theme="@style/whiteLoader" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_detail_right_side"
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="2.0"
                                        android:layoutDirection="locale"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="2.0"
                                            android:layoutDirection="locale"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:layoutDirection="locale"
                                                android:orientation="vertical"
                                                android:weightSum="5.0">

                                                <LinearLayout
                                                    android:id="@+id/ll_director_box_info"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_marginStart="10.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_director_info"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:layout_marginEnd="100.0dip"
                                                        android:gravity="left"
                                                        android:text="N/A"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_released_box_info"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_marginStart="10.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale">

                                                    <TextView
                                                        android:id="@+id/tv_release_date_info"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:layout_marginEnd="100.0dip"
                                                        android:gravity="left"
                                                        android:text="N/A"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_duration_box_info"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_marginStart="10.0dip"
                                                    android:layout_weight="0.8"
                                                    android:layoutDirection="locale"
                                                    android:visibility="gone">

                                                    <TextView
                                                        android:id="@+id/tv_movie_duration_info"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:layout_marginEnd="100.0dip"
                                                        android:gravity="left"
                                                        android:text="N/A"
                                                        android:textColor="@color/series_info_text1"
                                                        android:textDirection="locale"
                                                        android:textSize="18.0sp" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_genre_box_info"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="0.9"
                                                    android:layoutDirection="locale"
                                                    android:orientation="horizontal">

                                                    <RelativeLayout
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginEnd="100.0dip"
                                                        android:layoutDirection="locale">

                                                        <TextView
                                                            android:id="@+id/tv_genre_info"
                                                            android:layout_width="fill_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="10.0dip"
                                                            android:gravity="left"
                                                            android:maxLines="1"
                                                            android:text="N/A"
                                                            android:textColor="@color/series_info_text1"
                                                            android:textDirection="locale"
                                                            android:textSize="18.0sp" />

                                                        <TextView
                                                            android:id="@+id/tv_readmore_genre"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/tv_genre_info"
                                                            android:layout_marginStart="10.0dip"
                                                            android:focusable="true"
                                                            android:fontFamily="@string/font_family_medium"
                                                            android:gravity="center"
                                                            android:tag="4"
                                                            android:text="@string/read_more"
                                                            android:textColor="@color/series_heading"
                                                            android:textDirection="locale"
                                                            android:textSize="18.0sp"
                                                            android:textStyle="bold"
                                                            android:visibility="invisible" />
                                                    </RelativeLayout>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:id="@+id/ll_cast_box_info"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="0.0dip"
                                                    android:layout_weight="2.0"
                                                    android:layoutDirection="locale">

                                                    <RelativeLayout
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginEnd="100.0dip"
                                                        android:layoutDirection="locale">

                                                        <TextView
                                                            android:id="@+id/tv_cast_info"
                                                            android:layout_width="fill_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="10.0dip"
                                                            android:gravity="left"
                                                            android:maxLines="3"
                                                            android:text="N/A"
                                                            android:textColor="@color/series_info_text1"
                                                            android:textDirection="locale"
                                                            android:textSize="18.0sp" />

                                                        <TextView
                                                            android:id="@+id/tv_readmore"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/tv_cast_info"
                                                            android:layout_marginStart="10.0dip"
                                                            android:focusable="true"
                                                            android:fontFamily="@string/font_family_medium"
                                                            android:gravity="center"
                                                            android:nextFocusDown="@+id/tv_play"
                                                            android:tag="4"
                                                            android:text="@string/read_more"
                                                            android:textColor="@color/series_heading"
                                                            android:textDirection="locale"
                                                            android:textSize="18.0sp"
                                                            android:textStyle="bold"
                                                            android:visibility="invisible" />
                                                    </RelativeLayout>
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rating_box"
                                android:layout_width="fill_parent"
                                android:layout_height="50.0dip"
                                android:layoutDirection="locale">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layoutDirection="locale"
                                    android:weightSum="2.0">

                                    <LinearLayout
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:layoutDirection="locale">

                                        <RatingBar
                                            android:id="@+id/rating"
                                            style="?android:ratingBarStyleSmall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10.0dip"
                                            android:isIndicator="true"
                                            android:numStars="5"
                                            android:stepSize="0.1"
                                            android:theme="@style/RatingBar"
                                            android:visibility="visible" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0.0dip"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1.5"
                                        android:gravity="center_vertical"
                                        android:layoutDirection="locale"
                                        android:weightSum="6.0">

                                        <TextView
                                            android:id="@+id/tv_play"
                                            android:layout_width="0.0dip"
                                            android:layout_height="40.0dip"
                                            android:layout_marginStart="@dimen/_8dp"
                                            android:layout_weight="1.3"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:fontFamily="@string/font_family_medium"
                                            android:gravity="center"
                                            android:nextFocusUp="@+id/tv_readmore"
                                            android:tag="1"
                                            android:text="@string/nav_play"
                                            android:textColor="@color/white"
                                            android:textSize="19.0sp">

                                            <requestFocus />
                                        </TextView>

                                        <TextView
                                            android:id="@+id/tv_watch_trailer"
                                            android:layout_width="0.0dip"
                                            android:layout_height="40.0dip"
                                            android:layout_marginStart="10.0dip"
                                            android:layout_toEndOf="@+id/tv_play"
                                            android:layout_weight="2.0"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:fontFamily="@string/font_family_medium"
                                            android:gravity="center"
                                            android:tag="5"
                                            android:text="@string/watch_trailer"
                                            android:textColor="@color/white"
                                            android:textSize="17.0sp"
                                            android:visibility="gone">

                                            <requestFocus />
                                        </TextView>

                                        <TextView
                                            android:id="@+id/tv_add_to_fav"
                                            android:layout_width="0.0dip"
                                            android:layout_height="40.0dip"
                                            android:layout_marginStart="8.0dip"
                                            android:layout_marginEnd="10.0dip"
                                            android:layout_toEndOf="@+id/tv_watch_trailer"
                                            android:layout_weight="2.7"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:fontFamily="@string/font_family_medium"
                                            android:gravity="center"
                                            android:tag="2"
                                            android:text="@string/add_to_favourite"
                                            android:textColor="@color/white"
                                            android:textSize="19.0sp">

                                            <requestFocus />
                                        </TextView>

                                        <TextView
                                            android:id="@+id/tv_detail_back_btn"
                                            android:layout_width="0.0dip"
                                            android:layout_height="40.0dip"
                                            android:layout_toEndOf="@+id/tv_add_to_fav"
                                            android:layout_weight="0.25"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:fontFamily="@string/font_family_medium"
                                            android:gravity="center"
                                            android:tag="3"
                                            android:text="@string/back_button"
                                            android:textColor="@color/white"
                                            android:textSize="14.0sp"
                                            android:visibility="gone">

                                            <requestFocus />
                                        </TextView>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_description"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/ll_movie_info_box"
                        android:layout_marginStart="100.0dip"
                        android:layout_marginEnd="100.0dip"
                        android:layoutDirection="locale"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_movie_info"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginBottom="20.0dip"
                            android:fontFamily="@string/font_family_medium"
                            android:textColor="@color/series_info_text1"
                            android:textDirection="locale"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_description"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20.0dip"
                        android:layout_marginEnd="100.0dip">

                        <ImageView
                            android:id="@+id/tmdb_logo"
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:paddingStart="10.0dip"
                            android:paddingTop="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:src="@drawable/tmdb" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
</LinearLayout>