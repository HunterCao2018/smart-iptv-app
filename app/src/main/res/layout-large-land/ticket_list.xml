<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_outer"
    android:layout_width="fill_parent"
    android:layout_height="100.0dip"
    android:layout_margin="10.0dip"
    android:background="@drawable/selector_list_multidns"
    android:focusable="true"
    android:layoutDirection="locale"
    android:orientation="horizontal"
    android:weightSum="8.0">

    <ImageView
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginStart="10.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_weight="2.0"
        android:background="#84000000"
        android:layoutDirection="locale"
        android:padding="15.0dip"
        app:srcCompat="@drawable/ic_tickets" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="6.0"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:weightSum="4.0">

        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:maxLines="1"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:text="Support"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layoutDirection="locale"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layoutDirection="locale"
                android:text="Customer-Reply"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layoutDirection="locale"
                android:paddingStart="10.0dip"
                android:paddingEnd="2.0dip"
                android:text="@string/ticket_last_update"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_updated_value"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layoutDirection="locale"
                android:paddingEnd="5.0dip"
                android:text="9/10/2018 12:19"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>