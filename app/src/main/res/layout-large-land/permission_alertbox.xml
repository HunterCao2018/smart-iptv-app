<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_password_verification"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@null"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/ll_expandable"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_parental_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25.0dip"
                            android:drawableStart="@drawable/alert_icon"
                            android:drawablePadding="7.0dip"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@string/permission_required"
                            android:textColor="@color/black"
                            android:textSize="20.0sp" />

                        <ImageView
                            android:id="@+id/iv_div"
                            android:layout_width="fill_parent"
                            android:layout_height="2.0dip"
                            android:layout_below="@+id/tv_parental_password"
                            android:layout_marginTop="15.0dip"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:id="@+id/rl_body"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_div"
                            android:layout_margin="20.0dip">

                            <TextView
                                android:id="@+id/tv_need_permission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/need_permission"
                                android:textSize="20.0sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_body">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3.0">

                                <Button
                                    android:id="@+id/btn_grant"
                                    android:layout_width="150.0dip"
                                    android:layout_height="40.0dip"
                                    android:layout_marginStart="40.0dip"
                                    android:layout_marginTop="15.0dip"
                                    android:layout_marginEnd="20.0dip"
                                    android:layout_marginBottom="20.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/black_button_dark"
                                    android:tag="1"
                                    android:text="@string/permission_grant"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp" />

                                <Button
                                    android:id="@+id/btn_skip"
                                    android:layout_width="150.0dip"
                                    android:layout_height="40.0dip"
                                    android:layout_marginStart="0.0dip"
                                    android:layout_marginTop="15.0dip"
                                    android:layout_marginBottom="20.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/black_button_dark"
                                    android:tag="3"
                                    android:text="@string/btn_skip"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/btn_cancel"
                                    android:layout_width="150.0dip"
                                    android:layout_height="40.0dip"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="20.0dip"
                                    android:layout_marginTop="15.0dip"
                                    android:layout_marginEnd="40.0dip"
                                    android:layout_marginBottom="20.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/black_button_dark"
                                    android:focusable="true"
                                    android:tag="2"
                                    android:text="@string/permission_cancel"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>