<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tv_guide_epg_background"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_centerInParent="true"
            android:background="#ff343d46"
            android:fitsSystemWindows="true"
            android:minHeight="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="gone"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="7.0dip"
                    android:fontFamily="@string/font_family_bold"
                    android:gravity="center"
                    android:text="@string/account_info"
                    android:textColor="@color/white"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rl_settings"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginStart="30.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginEnd="30.0dip"
            android:visibility="visible">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150.0dip"
                android:layout_height="50.0dip"
                android:focusable="false"
                android:src="@drawable/full_white_logo" />

            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="8.0dip"
                android:layout_toEndOf="@+id/logo"
                android:gravity="center"
                android:text="|"
                android:textColor="@color/light_gray"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_toEndOf="@+id/separator"
                android:gravity="center"
                android:text="@string/settings_small"
                android:textColor="@color/light_gray"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/separator_second"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_toEndOf="@+id/textView"
                android:gravity="center"
                android:text="|"
                android:textColor="@color/light_gray"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/textView_second"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_toEndOf="@+id/separator_second"
                android:gravity="center"
                android:text="@string/tv_guide_epg_time_shift"
                android:textColor="@color/light_gray"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="10.0dip"
                android:layout_toStartOf="@+id/date"
                android:gravity="center"
                android:text="06:30 am"
                android:textColor="@android:color/white"
                android:textSize="22.0sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7.0dip"
                android:gravity="center"
                android:paddingEnd="30.0sp"
                android:text="Monday,Janurary 12"
                android:textColor="#ffcccccc"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280.0sp"
                    android:layout_marginTop="50.0sp"
                    android:layout_marginEnd="280.0sp"
                    android:background="#802a3543"
                    android:paddingBottom="30.0sp">

                    <RelativeLayout
                        android:id="@+id/rl_account_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10.0dip"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12.0dip"
                            android:layout_marginBottom="12.0dip"
                            android:text="@string/tv_guide_epg_time_shift"
                            android:textColor="@color/white"
                            android:textSize="24.0sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_account_info">

                        <LinearLayout
                            android:id="@+id/ll_timeshift"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:nextFocusDown="@+id/bt_save_changes"
                            android:orientation="vertical"
                            android:padding="20.0dip">

                            <Spinner
                                android:id="@+id/spinner_epg"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15.0dip"
                                android:layout_marginEnd="15.0dip"
                                android:background="@drawable/selector_login_fields"
                                android:entries="@array/epg_time_shift_array"
                                android:focusable="true"
                                android:nextFocusDown="@+id/bt_save_changes"
                                android:paddingStart="20.0dip"
                                android:paddingTop="15.0dip"
                                android:paddingEnd="15.0dip"
                                android:paddingBottom="15.0dip"
                                android:prompt="@string/time_shift_prompt"
                                android:tag="3" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_media_player_heading"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/black"
                            android:fontFamily="@string/font_family_bold"
                            android:gravity="center_horizontal"
                            android:padding="10.0dip"
                            android:text="Time Shift Selection"
                            android:textColor="@color/white"
                            android:textSize="16.0dip"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="270.0sp"
                    android:layout_marginEnd="270.0sp"
                    android:layout_marginBottom="10.0sp"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <Button
                        android:id="@+id/bt_save_changes"
                        android:layout_width="0.0dip"
                        android:layout_height="50.0sp"
                        android:layout_margin="20.0dip"
                        android:layout_weight="0.5"
                        android:background="@drawable/black_button_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:nextFocusUp="@+id/rb_mx_player"
                        android:tag="1"
                        android:text="@string/save_changes"
                        android:textColor="@color/white"
                        android:textSize="18.0sp">

                        <requestFocus />
                    </Button>

                    <Button
                        android:id="@+id/btn_back_playerselection"
                        android:layout_width="0.0dip"
                        android:layout_height="50.0sp"
                        android:layout_margin="20.0dip"
                        android:layout_weight="0.5"
                        android:background="@drawable/black_button_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:tag="2"
                        android:text="@string/back_button"
                        android:textColor="@color/white"
                        android:textSize="18.0sp">

                        <requestFocus />
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
</LinearLayout>