<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_notification"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:tag="1"
    android:visibility="visible"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="1.0dip"
    app:cardElevation="10.0dip"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_notification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#802a3543"
        android:layoutDirection="locale"
        android:paddingTop="10.0dip">

        <LinearLayout
            android:id="@+id/lv_titile_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:weightSum="1.0">

            <TextView
                android:id="@+id/tv_message_header"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:layout_weight="0.5"
                android:text="Title"
                android:textColor="@color/white"
                android:textDirection="locale"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20.0dip"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Created Date"
                android:textColor="@color/white"
                android:textDirection="locale"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_titile_date"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginEnd="20.0dip"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:text="message will give here and this will user to print the the important announcemnetn for clients"
            android:textColor="@color/white"
            android:textDirection="locale"
            android:textSize="14.0sp" />

        <ImageView
            android:id="@+id/iv_divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/tv_message"
            android:layout_marginTop="10.0dip"
            android:background="@color/dark_gray_selector" />
    </RelativeLayout>
</android.support.v7.widget.CardView>