<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_outer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20.0dip"
    android:layout_marginEnd="20.0dip"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10.0dip"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_outer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50.0dip"
            android:layout_height="60.0dip">

            <ImageView
                android:id="@+id/iv_client_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5.0dip"
                app:srcCompat="@drawable/user_placeholder" />

            <ImageView
                android:id="@+id/iv_admin_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5.0dip"
                app:srcCompat="@drawable/support_agent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="65.0dip"
                    android:gravity="center_vertical"
                    android:paddingStart="10.0dip"
                    android:text="Message"
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingEnd="10.0dip">

                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="5.0dip"
                    android:text="28-12-2018 11:23"
                    android:textColor="@color/black"
                    android:textSize="11.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>