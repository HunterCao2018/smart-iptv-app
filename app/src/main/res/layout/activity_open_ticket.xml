<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginStart="30.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginEnd="30.0dip"
        android:layoutDirection="locale"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:layoutDirection="locale"
            android:src="@drawable/full_white_logo" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="8.0dip"
            android:layout_toEndOf="@+id/logo"
            android:gravity="center"
            android:layoutDirection="locale"
            android:text="@string/my_ticket_open_ticket"
            android:textColor="@color/light_gray"
            android:textDirection="locale"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginEnd="10.0dip"
            android:layout_toStartOf="@+id/date"
            android:gravity="center"
            android:layoutDirection="locale"
            android:text="06:30 am"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layoutDirection="locale"
            android:paddingEnd="30.0sp"
            android:text="Monday,Janurary 12"
            android:textColor="#ffcccccc"
            android:textDirection="locale"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:textDirection="locale">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginEnd="60.0dip"
                android:layout_marginBottom="20.0dip"
                android:background="#802a3543"
                android:layoutDirection="locale"
                android:orientation="vertical"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip">

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layoutDirection="locale"
                    android:text="@string/fill_enquiry"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@+id/iv_div"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="8.0dip"
                    android:background="@color/white"
                    android:layoutDirection="locale"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:gravity="center"
                    android:layoutDirection="locale"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_subject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layoutDirection="locale"
                        android:text="@string/subject"
                        android:textColor="@color/white"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/et_subject_value"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:background="@drawable/selector_login_fields"
                        android:fontFamily="@string/font_family_regular"
                        android:gravity="center_vertical"
                        android:hint="Enter subject"
                        android:inputType="text"
                        android:layoutDirection="locale"
                        android:maxLines="1"
                        android:paddingStart="30.0dip"
                        android:paddingEnd="15.0dip"
                        android:textColorHint="@color/black"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/tv_departement"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:layoutDirection="locale"
                        android:text="@string/dept"
                        android:textColor="@color/white"
                        android:textSize="16.0sp" />

                    <Spinner
                        android:id="@+id/sp_department_value"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/selector_login_fields"
                        android:layoutDirection="locale"
                        android:paddingStart="10.0dip"
                        android:paddingEnd="20.0dip"
                        android:spinnerMode="dropdown"
                        android:tag="4"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:layoutDirection="locale"
                        android:text="@string/priority"
                        android:textColor="@color/white"
                        android:textDirection="locale"
                        android:textSize="16.0sp" />

                    <Spinner
                        android:id="@+id/sp_priority"
                        android:layout_width="fill_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/selector_login_fields"
                        android:entries="@array/priority_array"
                        android:layoutDirection="locale"
                        android:paddingStart="30.0dip"
                        android:paddingEnd="20.0dip"
                        android:spinnerMode="dropdown"
                        android:tag="4"
                        android:textColor="@color/black"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:layoutDirection="locale"
                        android:text="@string/message"
                        android:textColor="@color/white"
                        android:textDirection="locale"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="fill_parent"
                        android:layout_height="140.0dip"
                        android:layout_margin="5.0dip"
                        android:background="@drawable/selector_login_fields"
                        android:fontFamily="@string/font_family_regular"
                        android:gravity="start"
                        android:hint="@string/message_hint"
                        android:inputType="text"
                        android:layoutDirection="locale"
                        android:padding="10.0dip"
                        android:paddingStart="10.0dip"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black"
                        android:textDirection="locale"
                        android:textSize="15.0sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="20.0dip"
                        android:gravity="center"
                        android:layoutDirection="locale"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_submit"
                            android:layout_width="150.0dip"
                            android:layout_height="50.0dip"
                            android:layout_gravity="center"
                            android:background="@drawable/logout_btn_effect"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:tag="1"
                            android:text="@string/submit_"
                            android:textColor="@color/white"
                            android:textDirection="locale"
                            android:textSize="14.0sp" />

                        <Button
                            android:id="@+id/bt_close"
                            android:layout_width="150.0dip"
                            android:layout_height="50.0dip"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center|right"
                            android:layout_marginStart="30.0dip"
                            android:background="@drawable/blue_btn_effect"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:tag="2"
                            android:text="@string/back_button"
                            android:textColor="@color/white"
                            android:textDirection="locale"
                            android:textSize="14.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>